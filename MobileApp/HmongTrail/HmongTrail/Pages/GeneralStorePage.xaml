<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HmongTrail.Pages.GeneralStorePage"
             BackgroundColor="Black">
  <StackLayout
    Padding="5"
    VerticalOptions="FillAndExpand">
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center" />
    <Label 
      Text="Long Cheng Flea Market" 
      FontSize="Large"
      FontAttributes="Bold"
      HorizontalOptions="Center" />
    <Label Text="May 20, 1975" HorizontalOptions="End" />
    <Label Text="Food: $100.00" HorizontalOptions="Start" />
    <Label Text="Clothing: $40.00"  HorizontalOptions="Start" />
    <Label Text="Ammunition: $50.00"  HorizontalOptions="Start" />
    <Label Text="Total: $190.00"  HorizontalOptions="Start" />

    <Button
      Text="Done with Purchasing Supplies"
      HorizontalOptions="FillAndExpand"
      Command="{Binding BeginTravelingCommand}"/>
    
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center"
      VerticalOptions="End"/>
  </StackLayout>
</ContentPage>