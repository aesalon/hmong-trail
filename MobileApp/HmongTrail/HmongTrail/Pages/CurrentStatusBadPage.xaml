<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HmongTrail.Pages.CurrentStatusBadPage">
  <StackLayout
    Padding="5">
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center" />
    <Label Text="Arriving in Vientiane" HorizontalOptions="Center" />
    <Label Text="May 23, 1975" HorizontalOptions="End" />
    <Label Text="Weather: Very Hot" HorizontalOptions="Start" />
    <Label Text="Health: poor"  HorizontalOptions="Start" />
    <Label Text="Pace: slow"  HorizontalOptions="Start" />
    <Label Text="Rations: meager"  HorizontalOptions="Start" />

    <Button
      Text="Continue Traveling"
      HorizontalOptions="FillAndExpand"
      Command="{Binding ContinueTravelingCommand}"/>

    <Button
      Text="Stop to Rest"
      HorizontalOptions="FillAndExpand"/>
    
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center"
      VerticalOptions="End"/>
  </StackLayout>
</ContentPage>