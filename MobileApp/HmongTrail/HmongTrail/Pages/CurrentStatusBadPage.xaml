<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HmongTrail.Pages.CurrentStatusBadPage"
             BackgroundColor="Black">
  <StackLayout
    Padding="5">
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center" />
    <Label Text="Arriving in Vientiane" 
      FontSize="Large"
      FontAttributes="Bold"
      HorizontalOptions="Center" />
    
    <Label 
      Text="May 28, 1975" 
      HorizontalOptions="End" />
    <Label 
      Text="Weather:"
      FontAttributes="Bold" />
    <Label
      Text="Very Hot" />
    
    <Label 
      Text="Health:"
      FontAttributes="Bold" /> 
    <Label 
      Text="Poor"  
      HorizontalOptions="Start" />
    
    <Label 
      Text="Pace:"
      FontAttributes="Bold" />
    <Label
      Text="Slow" />
    
    <Label 
      Text="Rations:" 
      FontAttributes="Bold" />
    <Label 
      Text="Meager" />

    <Button
      Text="Continue Traveling"
      HorizontalOptions="FillAndExpand"
      Command="{Binding ContinueTravelingCommand}"/>

    <Button
      Text="Stop to Rest"
      HorizontalOptions="FillAndExpand"/>
    
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center"
      VerticalOptions="End"/>
  </StackLayout>
</ContentPage>