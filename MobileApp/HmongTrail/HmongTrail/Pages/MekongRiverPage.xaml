<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HmongTrail.Pages.MekongRiverPage">
  <StackLayout
    Padding="5">
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center" />
    <Label Text="Arrived at the Mekong River" HorizontalOptions="Center" />
    <Label Text="May 28, 1975" HorizontalOptions="End" />
    <Label Text="Weather: Rainy" HorizontalOptions="Start" />
    <Label Text="Health: Poor"  HorizontalOptions="Start" />
    <Label Text="Pace: Slow"  HorizontalOptions="Start" />
    <Label Text="Rations: Starving"  HorizontalOptions="Start" />

    <Button
      Text="Pay $20 for a boat to transport each family member across"
      HorizontalOptions="FillAndExpand"
      Command="{Binding BoatCommand}"/>

    <Button
      Text="Wait until nightfall to use makeshift bamboo rafts to float across"
      HorizontalOptions="FillAndExpand"
      Command="{Binding RaftCommand}"/>

    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center"
      VerticalOptions="End"/>
  </StackLayout>
</ContentPage>