<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HmongTrail.Pages.VillagePage"
             BackgroundColor="Black">
  <StackLayout
    Padding="5">
    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center" />

    <Label Text="The Communists are moving in closer each day. You must pack only what you can carry and leave by early next morning."/>
    <Image Source="village.png"/>

    <Button
      Text="Begin Traveling"
      HorizontalOptions="FillAndExpand"
      Command="{Binding BeginTravelingCommand}"/>

    <Image
      Source="borderlong.png"
      Aspect="AspectFill"
      HorizontalOptions="Center"
      VerticalOptions="End"/>
  </StackLayout>
</ContentPage>